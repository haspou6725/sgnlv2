# =====================================================================================
# SGNL-V2 Environment Configuration
# =====================================================================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Exchange API Keys (Optional - only needed for trading execution)
# For signal generation, public endpoints are sufficient
LBANK_API_KEY=
LBANK_SECRET_KEY=

BINANCE_API_KEY=
BINANCE_SECRET_KEY=

MEXC_API_KEY=
MEXC_SECRET_KEY=

BYBIT_API_KEY=
BYBIT_SECRET_KEY=

# MySQL Database Configuration
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=sgnlv2_user
MYSQL_PASSWORD=sgnlv2_secure_password
MYSQL_DATABASE=sgnlv2_db

# Application Configuration
LOG_LEVEL=INFO
REFRESH_INTERVAL=5
MAX_DAILY_TRADES=8
COOLDOWN_SECONDS=60

# Signal Thresholds
MIN_SCORE_THRESHOLD=72
MIN_ASK_IMBALANCE=0.60
TP_PERCENT=1.7
SL_PERCENT_MIN=0.7
SL_PERCENT_MAX=1.1

# Performance Settings
WS_PING_INTERVAL=30
REST_TIMEOUT=10
MAX_SYMBOLS=50
